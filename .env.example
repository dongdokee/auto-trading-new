# Environment Variables Template
# Copy this file to .env and fill in your actual values
# .env 파일로 복사하여 실제 값을 입력하세요

# System Configuration
ENVIRONMENT=development
LOG_LEVEL=INFO

# Database Configuration
# PostgreSQL for transactional data
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=autotrading
POSTGRES_USER=your_postgres_user
POSTGRES_PASSWORD=your_postgres_password

# TimescaleDB for time series data
TIMESCALE_HOST=localhost
TIMESCALE_PORT=5432
TIMESCALE_DB=market_data
TIMESCALE_USER=your_timescale_user
TIMESCALE_PASSWORD=your_timescale_password

# Redis for caching and state management
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password

# Exchange API Keys - Binance
BINANCE_API_KEY=your_binance_api_key
BINANCE_API_SECRET=your_binance_api_secret
BINANCE_TESTNET=true

# Exchange API Keys - Bybit
BYBIT_API_KEY=your_bybit_api_key
BYBIT_API_SECRET=your_bybit_api_secret
BYBIT_TESTNET=true

# Trading Configuration
TRADING_MODE=paper
BASE_CURRENCY=USDT

# Monitoring and Alerts
PROMETHEUS_PORT=9090
HEALTHCHECK_PORT=8080
ALERT_WEBHOOK_URL=https://your-webhook-url.com/alerts

# Security
JWT_SECRET_KEY=your_jwt_secret_key
ENCRYPTION_KEY=your_encryption_key

# External Services
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# Data Providers (Optional)
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key
QUANDL_API_KEY=your_quandl_api_key

# Risk Management
MAX_PORTFOLIO_VALUE=1000000
MAX_DAILY_LOSS_PCT=0.02
MAX_LEVERAGE=3.0

# Development Settings
DEBUG=false
TESTING=false